{
  "kind": "collectionType",
  "collectionName": "humans",
  "info": {
    "singularName": "human",
    "pluralName": "humans",
    "displayName": "Human",
    "description": "Represents a user interacting with the system"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "uuid": {
      "type": "uid",
      "required": true
    },
    "name": {
      "type": "string"
    },
    "email": {
      "type": "email",
      "unique": true
    },
    "telegram_handle": {
      "type": "string",
      "unique": true
    },
    "phone": {
      "type": "string",
      "unique": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "source": {
      "type": "enumeration",
      "enum": [
        "telegram",
        "web",
        "email",
        "phone",
        "api"
      ],
      "required": true
    },
    "last_active": {
      "type": "datetime"
    },
    "metadata": {
      "type": "json"
    },
    "interviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::interview.interview",
      "mappedBy": "human"
    },
    "owners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "humans"
    },
    "alias": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "mappedBy": "alias"
    },
    "is_anonymous": {
      "type": "boolean",
      "default": false
    }
  }
}